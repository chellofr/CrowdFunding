<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="update">

        <field name="title" type="text" class="inputbox"
            label="COM_CROWDFUNDING_TITLE" 
            size="40" 
            filter="trim"
            required="true"
           />
           
        <field name="description" type="textarea" class="span12"
            label="COM_CROWDFUNDING_FIELD_DESCRIPTION" 
            filter="trim"
            rows="20" 
            required="true"
        />

        <field name="id" type="text" class="readonly" 
            label="JGLOBAL_FIELD_ID_LABEL" 
            description="JGLOBAL_FIELD_ID_DESC"
            default="0" 
            readonly="true" 
        />
            
         <field name="project_id" type="text" class="readonly" 
            label="COM_CROWDFUNDING_PROJECT_ID_LABEL" 
            default="0" 
            readonly="true" 
        />
         
    </fieldset>
</form>
